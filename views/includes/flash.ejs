<% if (success && success.length) { %>
    <div class="flex justify-between items-center bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4"
        role="alert">
        <span>
            <%= success %>
        </span>
        <button type="button" class="ml-4 text-green-700 hover:text-green-900" aria-label="Close"
            onclick="this.parentElement.style.display='none';">
            &times;
        </button>
    </div>
    <% } %>
        <% if (error && error.length) { %>
            <div class="flex justify-between items-center bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
                role="alert">
                <span>
                    <%= error %>
                </span>
                <button type="button" class="ml-4 text-red-700 hover:text-red-900" aria-label="Close"
                    onclick="this.parentElement.style.display='none';">
                    &times;
                </button>
            </div>
            <% } %>
                <% if (warning && warning.length) { %>
                    <div class="flex justify-between items-center bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative mb-4"
                        role="alert">
                        <span>
                            <%= warning %>
                        </span>
                        <button type="button" class="ml-4 text-yellow-700 hover:text-yellow-900" aria-label="Close"
                            onclick="this.parentElement.style.display='none';">
                            &times;
                        </button>
                    </div>
                    <% } %>